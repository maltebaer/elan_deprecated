{
    "extends": ["tslint:latest", "tslint-react", "tslint-config-prettier"],
    "defaultSeverity": "warning",
    "linterOptions": {
        "exclude": ["config/**/*.js", "node_modules/**/*.ts"]
    },
    "rules": {
        "no-submodule-imports": false,
        "max-classes-per-file": false,
        "jsx-boolean-value": [true, "never"]
    }
}
